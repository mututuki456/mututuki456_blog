---
interface Props {
  page: {
    url: {
      prev: string | undefined;
      next: string | undefined;
    };
    currentPage: number;
    lastPage: number;
  };
}

const { page } = Astro.props;
---

<nav class="flex justify-center items-center gap-4 mt-6 mb-8">
  {
    page.url.prev ? (
      <a
        href={page.url.prev}
        class="flex items-center justify-center w-10 h-10 bg-white rounded-xl border border-gray-100 text-gold hover:shadow-md hover:text-accent hover:border-accent/30 transition-all duration-300"
        aria-label="前のページへ"
      >
        <span>&larr;</span>
      </a>
    ) : (
      <span class="flex items-center justify-center w-10 h-10 bg-white/20 rounded-xl border border-gray-100 text-gray-300 cursor-not-allowed">
        &larr;
      </span>
    )
  }

  <div class="flex items-center justify-center px-6 h-10 bg-white rounded-xl border border-gray-100 text-sm font-bold text-gold tracking-widest">
    {page.currentPage} <span class="mx-2 text-gray-300 font-light">/</span> {page.lastPage}
  </div>

  {
    page.url.next ? (
      <a
        href={page.url.next}
        class="flex items-center justify-center w-10 h-10 bg-white rounded-xl border border-gray-100 text-gold hover:shadow-md hover:text-accent hover:border-accent/30 transition-all duration-300"
        aria-label="次のページへ"
      >
        <span>&rarr;</span>
      </a>
    ) : (
      <span class="flex items-center justify-center w-10 h-10 bg-white/20 rounded-xl border border-gray-100 text-gray-300 cursor-not-allowed">
        &rarr;
      </span>
    )
  }
</nav>